{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [ "react" ],
  "rules": {
    "comma-style": [ "warn", "first", { "exceptions": { "ArrayExpression": true, "ObjectExpression": true } } ],
    "indent": [ "error", 2, { "SwitchCase": 1 } ],
    "no-empty": "warn",
    "no-unused-vars": [ "warn", { "vars": "all", "varsIgnorePattern": "^h$", "args": "all", "argsIgnorePattern": "^_+$" } ],
    "quote-props": [ "error", "as-needed", { "keywords": false, "numbers": true } ],
    "quotes": [ "warn", "single" ],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "semi": [ "warn", "never" ]
  }
}
